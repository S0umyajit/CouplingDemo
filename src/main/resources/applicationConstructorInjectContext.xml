<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="specification" class="car.example.constructor.injection.Specification">
        <property name="type" value="Alto"/>
        <property name="model" value="Suzuki"/>
    </bean>

    <bean id="car" class="car.example.constructor.injection.Car">
        <constructor-arg ref="specification"/>
    </bean>

</beans>